{
    "compilerOptions": {
        "strict": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "forceConsistentCasingInFileNames": false,
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "rootDir": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules"
    ]
}